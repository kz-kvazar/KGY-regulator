<resources>

    <!-- Base application theme. -->

    <declare-styleable name="AnalogView">
        <attr name="android:text" format="string"/>
        <attr name="maxValue" format="integer"/>
        <attr name="value" format="integer"/>
        <attr name="colorBackground" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="markRange" format="integer"/>
        <attr name="markRangeText" format="integer"/>
        <attr name="markRangeLong" format="integer"/>
        <attr name="isInteger" format="boolean"/>
        <attr name="isRedStart" format="boolean"/>

    </declare-styleable>
    <declare-styleable name="ChartView">
        <attr name="timeUnit" format="string"/>
        <attr name="valueUnit" format="string"/>
        <attr name="valueMarker" format="integer"/>
        <attr name="description" format="string"/>
        <attr name="isAvg" format="boolean"/>
        <attr name="isAutoScale" format="boolean"/>

    </declare-styleable>

</resources>