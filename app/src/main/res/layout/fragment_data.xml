<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DataFragment"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dataListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:keepScreenOn="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/on_off"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="1dp"
            />


    <Button
            android:id="@+id/on_off"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/btn_regulateOn"
            android:enabled="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/dataListView"
            app:layout_constraintTop_toTopOf="@id/soundOff"
            app:layout_constraintBottom_toBottomOf="@id/soundOff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/soundOff"
            android:layout_marginHorizontal="2dp"/>

    <Button
            android:id="@+id/soundOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_soundOff"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/on_off"
            app:layout_constraintTop_toBottomOf="@+id/dataListView"
            android:layout_marginHorizontal="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>