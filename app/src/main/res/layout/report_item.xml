<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.VPN"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/itemReportTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:paddingHorizontal="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/itemReportCH4"/>

    <TextView
            android:id="@+id/itemReportCH4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:paddingHorizontal="1dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/itemReportTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/itemReportConsumption"
            app:layout_constraintBottom_toBottomOf="@id/itemReportTime"/>

    <TextView
            android:id="@+id/itemReportConsumption"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:paddingHorizontal="1dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/itemReportCH4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/constPower"
            app:layout_constraintBottom_toBottomOf="@id/itemReportTime"/>
    <TextView
            android:id="@+id/constPower"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:paddingHorizontal="1dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/itemReportConsumption"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/itemReportTime"
            />

</androidx.constraintlayout.widget.ConstraintLayout>